<apex:page controller="EDA_SBA_Request_Controller" showHeader="false" standardStylesheets="false" docType="html-5.0">
  <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet" />
  <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.4/lodash.min.js"></script>
  <link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
    crossorigin="anonymous"></link>
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/css/bootstrap3/bootstrap-switch.min.css">
  </link>
  <!-- <apex:stylesheet value="{!URLFOR($Resource.formStyle, 'formStyle.css')}" /> -->

  <apex:pageBlock >

    <header>
      <apex:image value="{!$Resource.RPHeader}"/>
    </header>

    <div class="container form-container">
      <div class="form-container-inner">
        <apex:form enctype="multipart/form-data" id="theForm">
          <apex:pageBlock mode="edit">
            <apex:pageMessages id="pageMessages" />
            <apex:pageBlockButtons >
              <apex:commandButton value="Save" action="{!createObject}" />
            </apex:pageBlockButtons>
            <!-- <apex:pageBlockSection columns="1" showHeader="true"> -->
              <apex:repeat value="{!fieldNames}" var="FieldName" >
                <div class="row form-row">
                  <apex:outputText value="{!MID(FieldName, 3, 65535)}" rendered="{!CONTAINS(FieldName, 'h:')}" styleClass="block-h"></apex:outputText>
                  <apex:outputText value="{!MID(FieldName, 3, 65535)}" rendered="{!CONTAINS(FieldName, 'p:')}" styleClass="block-p"></apex:outputText>
                  <apex:pageBlock rendered="{!CONTAINS(FieldName, '__c')}">
                      <div class="form-group form-component">
                        <apex:outputText rendered="{!NOT($ObjectType.EDA_SBA_Request__c.fields[FieldName].Nillable)}" value="*" styleClass="block-require"></apex:outputText>
                        <apex:outputText styleClass="input-label" value="{!$ObjectType.EDA_SBA_Request__c.fields[FieldName].InlineHelpText}" />
                        <!-- <apex:pageBlockSectionItem > -->
                            <apex:inputField styleClass="form-control" value="{!refObject[FieldName]}" />
                        <!-- </apex:pageBlockSectionItem> -->
                      </div>
                  </apex:pageBlock>
                </div>
              </apex:repeat>
            <!-- </apex:pageBlockSection> -->
          </apex:pageBlock>
        </apex:form>
      </div>
    </div>

    <footer>
      <apex:image id="footer" value="{!$Resource.RPFooter}"/>
    </footer>

  </apex:pageBlock>

<script
  src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
  integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g="
  crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/js/bootstrap-switch.min.js"></script>

<style type="text/css">
body {
  background: #F3E4B2;
  background: linear-gradient(-30deg, #F3E4B2, #7A853B);
}

header, footer {
  max-width: 100%;
  width: 875px;
  margin: auto;
}

header {
  padding: 4rem 0 1rem 5px;
}

header img {
  width: 300px;
}

footer {
  padding: 3rem 0 5rem 0;
  text-align: center;
}

footer img {
  width: 300px;
}

h1, h2, h3 {
  font-weight: 300;
}

.form-container {
  max-width: 875px;
  padding: 5px;

  font-size: 1.1em;
}

.form-container > div {
  border-top: solid 1px #fff;
  background: #fafafa;
  border-radius: 2px;
  box-shadow: 0 30px 50px 0 rgba(0,0,0,.2);
}

.form-container .box.level-1 {
  padding: 0.5rem;
}

.form-container .box.level-2 {
  padding: 1rem;
}

.divider {
  border-top: solid 1px #ddd;
  border-bottom: solid 1px #fff;
  margin: 2rem 0 3rem 0;
  height: 0;
  color: #bbb;
  text-align: center;
}
.divider > .title {
  font-weight: 300;
}

.form-row {
  padding: 0 1rem;
}
@media (min-width: 768px) {
  .form-row {
    padding: 0.875rem 4rem;
  }
}

.submit-section {
  margin-top: 1rem;
}

.form-control, .bootstrap-switch, .btn {
  border-radius: 2px;
  box-shadow: 0 1px 0 0 rgba(0,0,0,.1);
  transition: box-shadow .1s ease;
}
.form-control:hover {
  box-shadow: 0 1px 1px 0 rgba(0,0,0,.15);
}
.form-control:focus {
  box-shadow: 0 2px 5px 0px rgba(0,0,0,.2);
}

.block-h {
  font-size: 1.5em;
}

.block-require {
  font-weight: 600;
  color: red;
  padding-right: 5px;
}

</style>

</apex:page>